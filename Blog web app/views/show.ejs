<%- include("partials/header.ejs") %>

<section class="container post-view">
    <a href="/" class="back-link">‚Üê Back to All Posts</a>
    
    <article class="full-post">
        <header class="post-header">
            <h1 class="post-title"><%= post.name %></h1>
            <div class="post-meta">
                <time>Posted on <%= post.createdAt.toLocaleDateString() %></time>
            </div>
        </header>

        <div class="post-body">
            <% post.body.split('\n').forEach(paragraph => { %>
                <p><%= paragraph %></p>
            <% }) %>
        </div>
    </article>
</section>

